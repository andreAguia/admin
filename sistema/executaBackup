#!/bin/bash

# Informa que iniciou o backup 
echo 'Executando backup'

# Define os valores para conectar o banco de dados
vv=$(hostname)
if [ $vv == "grh1206" ]
then
    USUARIO="root"
    SENHA="chewbacca"
elif [ $vv == "alat-pc" ]
then
    USUARIO="root"
    SENHA="chewbacca"
else
    USUARIO="andre"
    SENHA="alat"
fi

# Caminho
CAMINHO="/var/www/html/_backup/"

# Arquivo
ARQUIVO=$1

# Executa o backup no banco do GRH
BANCO="grh"
NOME1="$CAMINHO""$ARQUIVO.$BANCO"
mysqldump -u $USUARIO -p$SENHA $BANCO > $NOME1

# Executa o backup no banco do AREASERVIDOR
BANCO="areaservidor"
NOME2="$CAMINHO""$ARQUIVO.$BANCO"
mysqldump -u $USUARIO -p$SENHA $BANCO > $NOME2

# Compacta e junta os dois arquivos
tar -zcf "$CAMINHO""$ARQUIVO".tar $NOME1 $NOME2

# Apaga os arquivos originais nao compactados
rm $NOME1
rm $NOME2